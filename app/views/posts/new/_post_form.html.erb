<%= bootstrap_form_for @post do |f| %>
	<%= f.text_field :title, 
						maxlength: 100,
						placeholder: "Title", 
						class: "form-control",
						required: true,
						minilength: 5 %>
	<%= f.hidden_field :branch, value: @branch %>
	<%= f.text_area :content, 
					rows: 6, 
					required: true,
					minilength: 20,
					maxlength: 1000,
					placeholder: "Describe what are your looking for..",
					class: "form-control" %>
	<%= f.collection_select :category_id, @categories, :id, :name, 
							class: "form-control" %>
	<%= f.submit "Create a post", class: "form-control" %>
<% end %>